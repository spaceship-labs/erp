<div class="modal fade" id='installationModal' ng-controller="installationCTL">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="stdform stdform2 ng-pristine" ng-submit="createInstallation('<%- quote.id %>')">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">New Installation</h4>
                </div>
                <div class="modal-body">
                    <div class="widgetbox">
                        <div class="widgetcontent nopadding">
                            <%- partial('form') %>
                        </div>
                    </div>
                    <div class="widgetbox">
                        <div class="widgetcontent">
                            <span class="span3"><strong>Total : {{calculateInstallationTotal() | currency}}</strong></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="setStep(1)">Cancelar</button>
                    <input ng-if="step > 1" ng-click="setStep(step-1)" type="button" class="btn btn-default" value='Anterior'>
                    <input ng-if="step == 2" type="submit" class="btn btn-primary" value='Agregar'>
                    <input ng-if="step != 2" ng-click="setStep(step+1)" type="button" class="btn btn-primary" value='Siguiente'>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
