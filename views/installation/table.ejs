<table class="table table-striped">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Descripcion</th>
			<th>Referencia Interna</th>
			<th>Editar</th>
		</tr>
	</thead>
	<tbody>
		<tr ng-repeat='installation in installations'>
			<td ng-bind='installation.name' data-title="Nombre"></td>
			<td ng-bind='installation.description' data-title="Descripcion"></td>
			<td ng-bind='installation.internalReference' data-title="Referencia Interna"></td>
			<td data-title="Editar"><a ng-href='/machine/edit/{{installation.id}}' ><span class="table-icon fa fa-edit"></span></a></td>
		</tr>
	</tbody>
</table>