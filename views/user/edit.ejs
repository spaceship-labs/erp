<script type='text/javascript'>
    window.user = <%- JSON.stringify(user) %>;
    window.apps = <%- JSON.stringify(apps) %>;
</script>
<div ng-controller='userEditCTL'>
    <div class="span4 profile-left profileEdit">
        <div class="alert alert-block unseen">
            <button data-dismiss="alert" class="close" type="button">×</button>
            <h4>Mensaje</h4>
                <p style="margin: 8px 0">El usuario se ha actualizado exitosamente</p>
            </div>
            <div profile-image object='user' update-method='/user/updateIcon' delete-method='/user/destroyIcon' image-attr='icon' dir='users'></div>
        <div class="widgetbox tags">
            <h4 class="widgettitle">Aplicaciones y Permisos</h4>
            <div class="widgetcontent">
                <p>
                    <label for="adminInput">Administrador</label>
                    <input type="checkbox" id="adminInput" ng-model="user.isAdmin" />
                </p>
                <accordion close-others='false' ng-if="!user.isAdmin">
                    <accordion-group heading="{{app.label}}" ng-repeat="app in apps" ng-show="filterPermissionsApp(app)" style="cursor: pointer;">
                        <table class="table responsive">
                            <thead>
                                <tr>
                                    <th>Permiso</th>
                                    <th>Escoger</th>
                                </tr>
                            </thead>
                            <tbody ng-click="update()">
                                <tr ng-repeat='permission in app.permissions track by $index'>
                                    <td><label ng-bind='permission.label' for="{{permission.handle + '_' + $index}}"></label></td>
                                    <td>
                                         <div class="checkbox">
                                            <label>
                                                <input type="checkbox" id="{{permission.handle + '_' + $index}}" ng-model='view.permissions.create' >
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <a class="btn btn-primary" ng-click="updateAccestList()">Actualizar Usuario</a>
                    </accordion-group>
                </accordion>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="widgetbox personal-information">
            <h4 class="widgettitle">Información Basica</h4>
            <div class="widgetcontent">
                <form ng-submit="updateInfo()" class="editprofileform stdform stdform2 commonForm">
                        <p>
                            <label for="name">Nombre:</label>
                            <span class="field"><input type="text" name="name" class="input-xlarge" ng-model="user.name"></span>
                        </p>
                        <p>
                            <label for="last_name">Apellido</label>
                            <span class="field"><input type="text" name="last_name" class="input-xlarge" ng-model="user.last_name"></span>
                        </p>
                        <p>
                            <label for="email">Email</label>
                            <span class="field"><input type="text" name="email" class="input-xlarge" ng-model="user.email"></span>
                        </p>
                        <p>
                            <label for="phone">Telefono</label>
                            <span class="field"><input type="text" name="phone" class="input-xlarge" ng-model="user.phone"></span>
                        </p>
                        <%
                        var active = {
                            true:[0,'Desactivar']
                            , false:[1,'Activar']
                        }
                        %>
                        <p class="stdformbutton">
                            <button type="submit" class="btn btn-primary">Actualizar Usuario</button> &nbsp;
                            <a class="confirmbutton"  data-url="/user/" href="<%=active[user.active][0]%>"><%=active[user.active][1]%></a>
                        </p>
                    </form>
            </div>
        </div>
    </div>
    <% if (req.user.isAdmin) {%>
        <div class="span6">
            <%- partial('change-password') -%>
        </div>
    <% } %>
</div>
