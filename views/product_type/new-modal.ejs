<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content" ng-controller='productTypeCTL'>
        <script type='text/javascript'>
            window.sales_type = <%- JSON.stringify(sales_type) %>;
            window.inventory_type = <%- JSON.stringify(inventory_type) %>;
        </script>
        <div class="alert alert-block unseen">
            <button data-dismiss="alert" class="close" type="button">Ã—</button>
            <h4>Mensaje</h4>
            <p style="margin: 8px 0">tipo de producto creado exitosamente</p>
        </div>
        <form accept-charset="utf-8" enctype="multipart/form-data" class="stdform stdform2 ng-pristine" ng-submit="processForm()">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title">Nueva Categoria</h4>
	      </div>
	      <div class="modal-body">
              <div class="widgetbox">
                  <div class="widgetcontent nopadding">
                          <p>
                              <label for="name">Nombre*</label>
                              <span class="field"><input type="text" name="name" class="input-large" ng-model='product_type.name'></span>
                          </p>
                          <p><label for="app">Tipo de venta*</label>
                            <span class="field">
                                <select name='sales_type' class=' form-control large' data-placeholder="Escoger tipo" ng-model='product_type.sales_type' ng-options='k as l for (k,l) in  sales_type' chosen>
                                </select>
                            </span>
                          </p>
                          <p>
                              <label for="description">Descripcion</label>
                              <span class="field"><input type="text" name="description" class="input-large" ng-model='product_type.description'></span>
                          </p>
                          <p>
                              <label for="inventory_use">Inventariado ?</label>
                              <span class="field">
                                  <input type="checkbox" name="inventory_use" id="inventory_use" class="input-large" ng-model='product_type.inventory_use'>
                              </span>
                          </p>
                          <p ng-show="product_type.inventory_use == true" class="ng-hide">
                              <label for="inventory_type">Unidad de inventario</label>
                                      <span class="field">
                                          <select type="text" data-placeholder="Escoger unidad" name="inventory_type" class="input-large" ng-options='k as l for (k,l) in  inventory_types' ng-model='product_type.inventory_type' chosen></select>
                                      </span>
                          </p>
                  </div>
              </div>
          </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
	        <input type="submit" class="btn btn-primary" value='Guardar'>
	      </div>
	</form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->