<p ng-hide="!dtfa[0]"> <!-- arrival -->
    <label>Vehículo (llegada)</label>
    <span class='field'>
        <select 
            ng-model="modal.asign.vehicle_arrival"
            ng-options="c.id as c.car_id group by c.transfertype for c in filter_vehicles"
        ></select>
    </span>
</p>
<p ng-hide="!dtfa[0]"> <!-- arrival -->
    <label>Pickup (llegada)</label>
    <span class='field'>
        <timepicker ng-model="modal.asign.arrivalpickup_time" hour-step="1" minute-step="1" show-meridian="ismeridian"></timepicker>
    </span>
</p>
<p ng-hide="!dtfa[1]"> <!-- departure -->
    <label>Vehículo (salida)</label>
    <span class='field'>
        <select 
            ng-model="modal.asign.vehicle_departure"
            ng-options="c.id as c.car_id group by c.transfertype for c in filter_vehicles"
        ></select>
