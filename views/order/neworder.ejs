<script type='text/javascript'>
    window.clients_ = <%- JSON.stringify(clients_) %>;
    window.hotels = <%- JSON.stringify(hotels) %>;
    window.transfers = <%- JSON.stringify(transfers) %>;
    window.allTours = <%- JSON.stringify(allTours) %>;
	window.content = <%- JSON.stringify(_content) %>;
</script>
<div ng-controller='orderNewCTL' >
    <div class='row'>
        <div class='col-sm-12 col-md-6 col-lg-6'>
            <label class='outerLabel'>Agencia: </label>
            <select class='outerSelect' ng-model='thecompany' ng-options="obj as obj.name for obj in companies" ></select>
        </div>
        <div class='col-sm-12 col-md-6 col-lg-6'>
            <a class="btn btn-primary pull-right full-sm" ng-click="saveAll()"><i class='fa fa-save'></i> <%= __('order-reservar')%> </a>
            <a class='btn btn-primary pull-right full-sm' ng-click="resetForm(false)" ><i class='fa fa-eraser'></i> Limpiar campos</a>
            <div class='clear'></div>
        </div>
    </div><br>
    <div class='row'>
        <div class='col-md-8'>
        	<div class='row stdform stdform2'>
                <div class='col-md-12'><div class="widgetbox personal-information">
                    <div class='headtitle'>
                        <div class='btn-group'>
                            <a class="btn btn-primary pull-right" ng-click="resetForm('client')"><i class='fa fa-eraser'></i></a>
                            <a class="btn btn-primary pull-right" ng-click="setSteps('',1)"><i class='fa fa-{{client.id?"check":"circle-thin"}}'></i></a>
                            <a class='btn btn-primary pull-right' ng-click="searchClient = !searchClient"><i class='fa fa-search'></i></a>
                        </div>
                        <h4 class="widgettitle"><a class='expand' ng-click="setSteps('',1)"><i class='fa fa-user'></i> <%= __('order-cliente')%></a></h4>
                    </div>
                    <div class='widgetcontent nopadding'><div collapse="!(steps==1?true:false)">
                        <!--<p class='order-controls'>
                            <span><a class='' ng-click="searchClient = !searchClient"><i class='fa fa-search'></i> Buscar existente</a></span>
                            <span><a class='' data-toggle="modal" data-target="#myModal"><i class='fa fa-plus'></i>  <%= __('order-nuevo-cliente')%></a></span>
                        </p>-->
                        <div ng-show="searchClient"><p>
                            <label><%= __('order-selecc')%></label>
                            <span class='field'>
                                <!--<select chosen ng-options='obj as obj.name for obj in clients_' ng-model='client' ></select>-->
                                <input type="text" class="form-control" 
                                placeholder="<%= __('order-selecc')%>"
                                ng-model="client" 
                                typeahead-editable='true'
                                typeahead-on-select="client_flag = true"
                                typeahead="obj as obj.name for obj in getClients($viewValue)" >
                            </span>
                        </p></div>
                        <form class='form stdform stdform2 nopadding'>
                            <p>
                                <label>Nombre completo*</label>
                                <span class='field'><input type='text' name="name" ng-model="client.name" ng-required="true"></span>
                            </p>
                            <p>
                                <label>Teléfono*</label>
                                <span class='field'><input type='text' name="phone" ng-model="client.phone" ng-required="true"></span>
                            </p>
                            <p>
                                <label>E-mail*</label>
                                <span class='field'><input type='text' name="email" ng-model="client.email" ng-required="true"></span>
                            </p>
                        </form>
                        <p class='order-controls'>
                            <a class='btn btn-primary pull-right' ng-click="createUpdateClient()" ng-bind="client_flag?'Actualizar':'Crear'"></a>
                            <span class='clear'></span>
                        </p>
                        <h4 class='widgettitle'>Datos generales</h4>
                        <form class='form stdform stdform2 nopadding'>
                            <p>
                                <label>Hotel</label>
                                <span class='field'>
                                    <input type="text" class="form-control" 
                                        placeholder="<%= __('order-hotel')%>"
                                        ng-model="generalFields.hotel"
                                        typeahead-editable='true'
                                        typeahead="obj as obj.name for obj in getHotels($viewValue)" >
                                </span>
                            </p>
                            <p>
                                <label>Número de cuarto de hotel</label>
                                <span class='field'>
                                    <input type='text' ng-model="generalFields.hotelroom" />
                                </span>
                            </p>
                            <p>
                                <label>Fecha de llegada</label>
                                <span class='field'>
                                    <span class='input-group calendar-container'><input is-open="open[2]" ng-model='generalFields.arrival_date' id="arrival-date" datepicker-popup/>
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="open($event,2)"><i class="fa fa-calendar"></i></button>
                                    </span></span>
                                </span>
                            </p>
                            <p>
                                <label>Vuelo de llegada</label>
                                <span class='field'>
                                    <input type='text' ng-model="generalFields.arrival_fly" />
                                </span>
                            </p>
                        </form>
                        <!--<p>
                            <label><%= __('order_userClient') %></label>
                            <span class='field'><input type='checkbox' ng-model='USClient' ></span>
                        </p>-->
                        <p class='order-controls'>
                            <a class='btn btn-primary pull-right' ng-click="setSteps('next',false)" >Siguiente</a>
                            <span class='clear'></span>
                        </p>
                    </div></div>
                </div></div>
                <!--<div class='col-md-6' ng-hide='USClient'>
                    <div class='headtitle'>
                        <div class='btn-group'><a ng-click="saveContact()" class="btn btn-primary pull-right"><i class='fa fa-save'></i> <%= __('order_create') %></a></div>
                        <h4 class="widgettitle"><%= __('order_createContact') %></h4>
                    </div>
                    <div class='widgetcontent nopadding'>
                        <p>
                            <label><%= __('order_name') %></label>
                            <span class='field'><input type='text' ng-model="contact.name"></span>
                        </p>
                        <p>
                            <label><%= __('order_mail') %></label>
                            <span class='field'><input type='text' ng-model="contact.email"></span>
                        </p>
                        <p>
                            <label><%= __('order_phone') %></label>
                            <span class='field'><input type='text' ng-model="contact.phone"></span>
                        </p>
                    </div>
                </div>-->
            </div>
            <!-- Hotel section -->
            <div class='row'>
                <form class='stdform stdform2 col-md-12' action='' name='' method='post'>
                    <div class='headtitle'>
                        <div class='btn-group'>
                            <a class="btn btn-primary pull-right" ng-click="resetForm('hotel')"><i class='fa fa-eraser'></i></a>
                            <a class="btn btn-primary pull-right" ng-click="setSteps('',2)"><i class='fa fa-circle-thin'></i></a>
                        </div>
                        <h4 class="widgettitle"><a class='expand' ng-click="setSteps('',2)"><i class='fa fa-building'></i> <%= __('order-reservar-hotel')%></a></h4>
                    </div>
                    <div collapse="!(steps==2?true:false)">
                        <div class='row'>
                            <div class='col-md-10'>
                                <p><select chosen ng-options='obj as obj.name for obj in hotels' ng-model='addedHotel' ></select></p>
                            </div>
                            <div class='col-md-2'>
                                <a ng-click='addTH("hotel",false)' class='btn-primary btn pull-right'><%= __('order-agregar')%></a>
                            </div>
                        </div><br >
                        <div class='isCHotelContainer'>
                            <div ng-repeat='item in reservations.hotels'>
                                <%- partial('inputsHotel') -%> 
                            </div>
                        </div>
                        <div class='headtitle'>
                            <a ng-click="setSteps('next',false)" class='btn btn-primary pull-right' >Siguiente</a>
                            <a ng-click="setSteps('prev',false)" class='btn btn-primary pull-right' >Anterior</a>
                            <span class='clear'></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
            <!-- Tours section -->
            <div class='row'>
                <form class='stdform col-md-12' action='' name='tours' method='post'>
                    <div class='headtitle'>
                        <div class='btn-group'>
                            <a class="btn btn-primary pull-right" ng-click="resetForm('tour')"><i class='fa fa-eraser'></i></a>
                            <a class="btn btn-primary pull-right" ng-click="setSteps('',3)"><i class='fa fa-{{reservations.tours.length&&reservations.tours[0].fee?"check":"circle-thin"}}'></i></a>
                        </div>
                        <h4 class="widgettitle"><a class='expand' ng-click="setSteps('',3)"><i class='fa fa-compass'></i> <%= __('order-reservar-tour')%></a></h4>
                    </div>
                    <div collapse="!(steps==3?true:false)">
                        <div class='row'>
                            <div class='col-md-12 peoplelist orderTourList'>
                                <div class='peopleinfo'><ul>
                                    <li ng-repeat="t in allTours.results">
                                        <div class='thumb'>
                                            <img ng-if='t.icon' ng-src="/uploads/tours/50x50{{t.icon.filename}}">
                                            <img ng-if='!t.icon' ng-src="http://placehold.it/50x50">
                                        </div>
                                        <div class='info'>
                                            <p><strong><a ng-bind="t.name"></a></strong>, adultos $<span ng-bind="t.fee"></span> , niños $<span ng-bind="t.feeChild"></span></p>
                                            <p>{{t.description_es | limitTo : 180}}</p>
                                        </div>
                                        <div class='pull-right actions'>
                                            <a ng-click="addTH('tour',t)"><i class='fa fa-plus'></i> Agregar</a>
                                            <a ng-click="view('tour',t)"><i class='fa fa-eye'></i> Ver más</a>
                                        </div>
                                        <div class='clear'></div>
                                    </li>
                                </ul></div>
                                <div><pagination total-items="allTours.count" ng-model="toursCurrentPage" max-size="7" class="pagination-sm" items-per-page='5' ng-change="getAllTours()"></pagination></div>
                                <!--<p>
                                    <input type="text" class="form-control" 
                                        placeholder="Tours"
                                        ng-model="addedTour" 
                                        typeahead-editable='true'
                                        typeahead="obj as ( thecompany.adminCompany?obj.name:obj.tour.name ) for obj in getTours($viewValue)" >
                                </p>-->
                            </div>
                        </div><br >
                        <div class='stdform2 isCtourContainer'>
                            <div ng-repeat='item in reservations.tours'>
                                <%- partial('inputsTour') -%> 
                            </div>
                        </div>
                        <div class='headtitle'>
                            <a ng-click="setSteps('next',false)" class='btn btn-primary pull-right' >Siguiente</a>
                            <a ng-click="setSteps('prev',false)" class='btn btn-primary pull-right' >Anterior</a>
                            <span class='clear'></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
            <!-- Transfer section -->
            <div class='row'>
                <form class='stdform stdform2 col-md-12 widgetbox' action='' name='' method='post'>
                    <div class='headtitle'>
                        <div class='btn-group'>
                            <a class="btn btn-primary pull-right" ng-click="resetForm('transfer')"><i class='fa fa-eraser'></i></a>
                            <a class="btn btn-primary pull-right" ng-click="setSteps('',4)"><i class='fa fa-{{transfer.fee?"check":"circle-thin"}}'></i></a>
                            <a class="btn btn-primary pull-right" ng-click="setTheItemForContacts(transfer,'transfer',false)" data-toggle="modal" data-target="#myModal"><i class='fa fa-user'></i> Clientes</a>
                        </div>
                        <h4 class="widgettitle"><a class='expand' ng-click="setSteps('',4)"><i class='fa fa-car'></i> <%= __('order-reservar-tras')%></a></h4>
                    </div>
                    <div class='widgetcontent nopadding'><div class='collapseCustom' collapse="!(steps==4?true:false)">
                        <%- partial('inputsTransfer') -%> 
                    </div></div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
        <div class='col-md-4'>
            <div class='widgetbox'>
                <h4 class="widgettitle">Información de pago</h4>
                <div class="widgetcontent paymentInformation">
                    <p>
                        <label><%= __('order-pago')%></label>
                        <span class='field'><select ng-options='obj as obj.name for obj in hrevPayment' ng-model='generalFields.payment_method' ></select></span>
                    </p>
                    <p ng-show="generalFields.payment_method.handle=='creditcard'">
                        <label><%= __('order-autorizacion')%></label>
                        <span class='field'><input type='text' name='autorization_code' ng-model="generalFields.autorization_code" /></span>
                    </p>
                    <p>
                        <label>Moneda</label>
                        <span class='field'>
                            <select ng-options="c as c.name for c in thecompany.currencies" name='currency' ng-model='generalFields.currency' ng-change='updatePriceTransfer()' ></select>
                        </span>
                    </p>
                    <div ng-show="!transfer.fee && reservations.tours.length==0 && reservations.hotels.length==0">
                        <h4>No hay reservas activas</h4>
                    </div>
                    <div ng-show="transfer.fee || reservations.tours.length || reservations.hotels.length">
                        <div ng-if="transfer.fee">
                            <h4><strong>Reserva de traslado</strong></h4>
                            <p><span ng-bind="transfer.transfer.transfer.name"></span> - $<span ng-bind="transfer.fee"></span></p>
                        </div>
                        <div ng-if="reservations.tours.length">
                            <h4><strong>Reserva de tours</strong></h4>
                            <p ng-repeat="t in reservations.tours"><span ng-bind="t.tour.name"></span> - $<span ng-bind="t.fee + f.feeKids"></span></p>
                        </div>
                        <div ng-if="reservations.hotels.length">
                            <h4><strong>Reserva de hoteles</strong></h4>
                        </div>
                        <hr>
                        <h4>TOTAL : $<span ng-bind="theTotal"></span></h4>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- Termina row reservas y columna de precios -->
    <div class='row'>
        <div class='col-md-12'>
            <a class="btn btn-primary btn-big pull-right full-sm" ng-click="saveAll()"><i class='fa fa-save'></i> <%= __('order-reservar')%> </a>
            <a class='btn btn-primary btn-big pull-right full-sm' ng-click="resetForm(false)" ><i class='fa fa-eraser'></i> Limpiar campos</a>
        </div>
    </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class='widgetbox'>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Clientes para las reservas <a ng-click="openContactForm(false,'create')"><i class='fa fa-plus'></i> Nuevo cliente</a></h4>
                    </div>
                    <div collapse="!modalCollapse">
                        <form class='stdform stdform2'>
                            <p>
                                <label><%= __('order_name') %></label>
                                <span class='field'><input type='text' ng-model="contact.name"></span>
                            </p>
                            <p>
                                <label><%= __('order_mail') %></label>
                                <span class='field'><input type='text' ng-model="contact.email"></span>
                            </p>
                            <p>
                                <label><%= __('order_phone') %></label>
                                <span class='field'><input type='text' ng-model="contact.phone"></span>
                            </p>
                            <p class='order-controls'>
                                <a ng-hide="contactFlag!='create'" class='btn btn-primary pull-right' ng-click="createUpdateContact()">Crear</a>
                                <a ng-hide="contactFlag!='update'" class='btn btn-primary pull-right' ng-click="createUpdateContact()">Actualizar</a>
                                <a class='btn btn-primary reset pull-right' ng-click="cancelContactForm()">Cancelar</a>
                                <span class='clear'></span>
                            </p>
                        </form>
                    </div>
                    <div class='widgetcontent'><div class='row'>
                        <div class='col-md-6'>
                            <h4 class='widgettitle'>Clientes de esta reserva</h4>
                            <div class='widgetcontent'>
                                <ul>
                                    <li ng-repeat="c in client.contacts">
                                        <a>{{c.name}}</a>
                                        <span class='icons pull-right'>
                                            <a ng-click="openContactForm(c,'update')"><i class='fa fa-pencil'></i></a>
                                            <a ng-click="addContactToItem($index)"><i class='fa fa-plus'></i></a>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class='col-md-6'>
                            <h4 class='widgettitle'>Clientes de este item</h4>
                            <div class='widgetcontent'>
                                <ul>
                                    <li ng-repeat="c in theIFC.contacts">
                                        <a>{{client.contacts[c].name}}</a>
                                        <span class='icons pull-right'>
                                            <a ng-click="removeContactFromItem(c)"><i class='fa fa-minus'></i></a>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div></div>
                    <div class='stdform2'>
                        <p class="stdformbutton">
                            <button type="button" class="btn btn-primary pull-right" ng-click="saveContactForm()">Guardar</button>
                            <button type="button" class="btn btn-primary pull-right" ng-click="cancelContactForm()" data-dismiss="modal" aria-hidden="true">Cerrar</button>
                            <span class='clear'></span>
                        </p>
                    </div>
                </div>
                <!--<div 
                    form-helper 
                    fields='content.clientForOrders' 
                    form-footer='Agregar'
                    form-save = 'createClient'
                    object = 'client_c'
                    form-title='Agregar Cliente'
                    modal='true'
                    >
                </div>-->
            </div>
        </div>
    </div>
    <div id='popup_overlay' class='ng-hide ng-cloak' ng-hide="!alertM.show"></div>
    <div id='popup_container' class='alert-warning ng-hide ng-cloak' ng-hide="!alertM.show">
        <h1 id="popup_title" ><%= __('order_error') %></h1>
        <div id="popup_content" class="alert" ng-show="alertM.show&&alertM.client">
            <div id="popup_message"><%= __('order_errC') %></div>
            <div id="popup_panel"><a ng-click="alertM.show=false;alertM.client=false;" id="popup_ok" style="display: block;width: 150px;margin: 0 auto;">OK</a></div>
        </div>
        <div id="popup_content" class="alert" ng-show="alertM.show&&alertM.allEmpty">
            <div id="popup_message"><%= __('order_errA') %></div>
            <div id="popup_panel"><a ng-click="alertM.show=false;alertM.allEmpty=false;" id="popup_ok" style="display: block;width: 150px;margin: 0 auto;">OK</a></div>
        </div>
        <div id="popup_content" class="alert" ng-show="alertM.show&&alertM.date">
            <div id="popup_message"><%= __('order_errDate') %></div>
            <div id="popup_panel"><a ng-click="alertM.show=false;alertM.date=false;" id="popup_ok" style="display: block;width: 150px;margin: 0 auto;">OK</a></div>
        </div>
    </div>
    <div custom-message messages="customMessages"></div>
</div>