<h4 class="widgettitle">Informacion de inventario</h4>
<div class="widgetcontent nopadding">
    <form method="post" accept-charset="utf-8" enctype="multipart/form-data" class="stdform stdform2 ng-pristine" ng-submit="processInventory();">
        <input type='hidden' ng-value='product.id' name='pid' />
        <p>
            <label>Modificar</label>
            <span class="field">
                <input type="number" name="inventory" id="inventory" ng-model='product.addInventory' class="number form-control" min="0"/>
            </span>
        </p>
        <p>
            <label>Total </label>
            <span class="field" class="form-control">{{calculateTotalInventory()}}</span>
        </p>
        <p class="stdformbutton">
            <button class="btn btn-primary">Guardar</button>
        </p>
    </form>
</div>