<table class="table table-striped">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Descripci√≥n</th>
			<th>Tipo</th>
			<th>Referencia</th>
			<th>Precio</th>
			<th>Agregar</th>
		</tr>
	</thead>
	<tbody>
		<tr ng-repeat='product in products'>
			<td  data-title="Nombre"><a href="#" ng-href='/product/edit/{{product.id}}' ng-bind='product.name'></a></td>
			<td ng-bind='product.description' data-title="Descripcion"></td>
			<td ng-bind='product.type' data-title="Tipo"></td>
			<td ng-bind='product.internalReference' data-title="Referencia"></td>
			<td ng-bind='product.price' data-title="Precio "></td>
			<td data-title="Agregar"><a href='#' ><span class="table-icon fa fa-plus" ng-click='addProduct(product)'></span></a></td>
		</tr>
	</tbody>
</table>