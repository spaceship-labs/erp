<script type='text/javascript'>
	window.tours = <%- JSON.stringify(tours) %>;
	window.locations = <%- JSON.stringify(locations) %>;
	window.schemes = <%- JSON.stringify(schemes) %>;
	window.tourcategories = <%- JSON.stringify(tourcategories) %>;
	window.providers = <%- JSON.stringify(providers) %>;
    window.zones = <%- JSON.stringify(zones) %>;
</script>
<div ng-controller='tourCTL' >
	<!--<p><button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Nuevo Tour</button></p>-->
	<!--<div directory-listing objects='hotels' searchInput='searchInput' dir='hotels' edit-url='/hotel/edit/' get-info='getInfo' button-text='Nuevo Tour'></div>-->
	<!--<p><a class='btn btn-primary' ng-click="setTimes()">FORMAT TIME</a></p>-->
	<div directory-listing 
		objects='tours' 
		keywords='searchInput' 
		search-find='true'
		dir='tours' 
		edit-url='/tour/edit/' 
		get-info='getInfo'
        get-url="/tour/find/"
		name-var='nombre_completo'
		button-text-import='Importar Tours' 
		type-import='tour' 
		button-text='<%= __('tour-nuevo')%>'
		button-text-export='<%= __('export') %>' 
		type-export='tour'
		type-export-text='<%= __("sc_tour") %>'
	></div>
	<div class="modal fade" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div 
					form-helper 
			        fields='content.tour' 
			        form-footer='<%= __('order-agregar')%>'
			        form-save = 'createTour'
			        object = 'tour'
			        form-title='<%= __('tour-agregar')%>'
			       	modal='true'
			        objects='{schemes:schemes,locations:locations,providers:providers,maxpax:maxpax,tourcategories:tourcategories,types:types,zones:zones}'
			       	currency='company.base_currency'
                    onchanges = "{'getZones' : getZones}"
			        >
			    </div>	
			</div>
		</div>
	</div>
</div>
