<body >

    <div class="wizard" id="some-wizard" data-title="Instalar Sistema">
            <form action="/install/create/" method="post" accept-charset="utf-8" enctype="multipart/form-data" class="stdform stdform2 companyCreate" >
                <div class="wizard-card stdform stdform2" data-cardname="card1" >
                    <h3>Empresa</h3>
                    <%- partial('../company/new-basic') -%> 
                </div>

                <div class="wizard-card stdform stdform2" data-cardname="card2">
                    <h3>Configuracion Basica</h3>            
                    <%- partial('../company/new-settings') -%> 
                </div>
                <div class="wizard-card stdform stdform2" data-cardname="card3">
                    <h3>Usuario</h3>            
                    <%- partial('../user/new-basic') -%>
                </div>
            </form>
    </div>
    <script src="/bower_components/jquery-modern/dist/jquery.min.js"></script>
    <script src="/bower_components/jquery-browser-detection/src/browser-detection.js"></script>
