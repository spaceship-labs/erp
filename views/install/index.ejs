    <script src="/js/themejs/responsive-tables.js"></script>
    <script>
        $(document).ready(function() {
            //$('.chzn-select').chosen();
            $.fn.wizard.logging = true;
            var options = {
                contentHeight: 500,
                contentWidth: 950,
                submitUrl: '/install/create',
            };
            var wizard = $("#some-wizard").wizard(options);
            wizard.show();
	    wizard.on("submitSuccess",function(){
	    	window.location = "/home/login";
	    });
        });
    </script>
