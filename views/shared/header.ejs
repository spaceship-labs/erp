<div class="header">
  <div class="logo">
    <a href="/home/index"></a>
  </div>
  <div class="headerinner">
    <ul class="headmenu">
      <li class="odd">
        <a class="dropdown-toggle" data-toggle="dropdown" href="/home">
          <span class="count"><%=companies.length%></span>
          <span class="fa fa-home menu-icon"></span>
          <span class="headmenu-label"><%= __('global-empresas') %></span>
        </a>
         <ul class="dropdown-menu">
          <li class="nav-header"><%= __('global-cambiar') %></li>
          <% for(var i=0;i<companies.length;i++){ %>
            <li><a href="/company/change?id=<%= companies[i].id %>">
              <%
                var icon = companies[i].icon?"/uploads/companies/50x50" + companies[i].icon.filename : "http://placehold.it/50x50";
                   %>
                <img src="<%=icon%>" alt="" />
                <strong><%= companies[i].name %></strong>
                <small><%= companies[i].description %></small>
              </a></li>
          <% } %>
         </ul>
      </li>
      <%-partial('userinfo') -%> 
    </ul>
  </div>
</div>
