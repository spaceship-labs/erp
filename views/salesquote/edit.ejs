    <div class="row-fluid">
        <div class="col-md-8">
            <div class="widget-input-field">
                <div class="widgettitle">DATOS GENERALES</div>
                <div class="widget-content">
                  <table class="table table-form-fields">
                        <tr>
                            <td>
                                <label>Elaboro:</label>
                                <span>{{ quote.user.name }}</span>
