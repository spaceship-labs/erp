<script type='text/javascript'>
    window.cupon = <%- JSON.stringify(cupon) %>;
    window.hotels = <%- JSON.stringify(hotels) %>;
    window.content = <%- JSON.stringify(_content) %>;
    window.tours = <%- JSON.stringify(tours) %>;
    window.transfers = <%- JSON.stringify(transfers) %>;
</script>
<div ng-controller='cuponEditCTL' class="editar-tour ng-cloak">
    <div class="span8">
        <div form-helper 
            fields='content.cupons' 
            object='cupon' 
            objects='{hotels:hotels,tours:tours,transfers:transfers}' 
            action='/cupon/update/<%=cupon.id%>' 
            form-title='<%= __("gral_basicInfo") %>'
            >
        </div> 
        <p><a ng-click="advanced=!advanced">Opciones avanzadas <i class='fa fa-plus'></i></a></p>
        <div collapse="!advanced">
            <div form-helper 
            fields='content.cuponsadvance' 
            object='cupon' 
            objects='{hotels:hotels,tours:tours,transfers:transfers}' 
            action='/cupon/update/<%=cupon.id%>' 
            form-title='<%= __("gral_basicInfo") %>'
            >
        </div> 
        </div>
    </div>  

</div>
