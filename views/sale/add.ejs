<div ng-controller="saleAddCTL">
    <div class="span6">
        <div class="alert alert-block unseen">
            <button data-dismiss="alert" class="close" type="button">Ã—</button>
            <h4>Mensaje</h4>
            <p style="margin: 8px 0">La venta se ha creado exitosamente</p>
        </div>
        <div class="widgetbox">
            <div class="widgetcontent nopadding">
                <h4 class="widgettitle">Cliente</h4>
                <form action="/sale/create" method="post" accept-charset="utf-8" class="stdform stdform2 ng-pristine" name="sale">
                    <p>
                        <label for="client_id">Selecciona un cliente :</label>
						<span class="field">
                            <span>
                                <select name='client' id='client' class='form-control large required' data-placeholder="Selecciona ..." chosen="clients" ng-model="dsa" ng-options="client.name for client in clients">
                                </select>
                            </span>
                            <span>
                                <a href="/clients/add"><button class="btn btn-default">Crear Nuevo</button></a>
                            </span>
                        </span>
                    </p>
                    <h4 class="widgettitle">Cotizacion</h4>
                    <p>
                        <label for="products">Selecciona los productos :</label>
                        <span class="field">
                            <select id='products' class='form-control large' data-placeholder="Selecciona ..." chosen="products" ng-model="asd" ng-options="product.name for product in products">
                            </select>
                            <span class="btn btn-default" ng-click="addProduct()">Agregar</span>
                        </span>
                    <p>
                    <p>
                        <table class="table responsive">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Precio</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="sp in selectedProducts track by $index">
                                    <td>{{sp.name}}</td>
                                    <td><input type="number" class="input-small input-spinner" min="1" maxlength="2" ng-model="sp.Quantity" value="{{sp.Quantity}}"></td>
                                    <td>{{sp.price}}</td>
                                    <td>{{sp.price * sp.Quantity}}</td>
                                    <td><input type="button" value="Eliminar" ng-click="removeProduct($index)" /></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="amountdue">
                            <h1><span>Total:</span> {{totalPrice()}}</h1>
                        </div>
                    </p>
                    <p class="stdformbutton">
                        <button class="btn btn-primary">Guardar</button>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
