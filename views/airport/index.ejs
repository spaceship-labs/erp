<script type='text/javascript'>
	window.airports = <%- JSON.stringify(airports) %>;
	window.locations = <%- JSON.stringify(locations) %>;
	window.zones = <%- JSON.stringify(zones) %>;
	window.content = <%- JSON.stringify(_content) %>;
</script>
<div ng-controller='airportCTL' >
	<!--<p><button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Nuevo Aeropuerto</button></p>
	<br/>-->
	<div 
		directory-listing 
		objects='airports' 
		searchInput='searchInput' 
		dir='airports' 
		edit-url='/airport/edit/' 
		get-info='getInfo'
		name-var='name'
		button-text= '<%= __('airpot-create') %>'
		></div>

	<div class="clearfix"></div>
	<div class="span6">
		<div class="alert alert-block unseen userAlert">
			<button data-dismiss="alert" class="close" type="button">Ã—</button>
			<h4><%= __('airport-mensaje') %></h4>
			<p><%= __('airport-creo-existoso') %></p>
		</div>
	</div>
	<div class="modal fade" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div 
					form-helper 
			        fields='content.airport' 
			        form-footer='Agregar'
			        form-save = 'createAirport'
			        object = 'airport'
			        objects = '{locations:locations,zones:zones}'
			        form-title='<%= __('airpot-add') %>' 
			       	modal='true'
			       	onchanges = "{'getZones' : getZones}"
			        >
			    </div>
			</div>
		</div>
	</div>
</div>
